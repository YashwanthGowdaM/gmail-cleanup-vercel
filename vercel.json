{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "vercel-python@3.1.0"
    }
  },
  "builds": [
    { "src": "api/**/*.py", "use": "vercel-python@3.1.0" },
    { "src": "frontend/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
